<TitledPane text="Policy Owner Menu" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.policy_owner_controllers.PolicyOwnerMenuController">
    <Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
          prefWidth="600.0">
        <VBox fx:id="claimFunctions" layoutX="118.0" layoutY="81.0" prefHeight="136.0" prefWidth="100.0">
            <Button fx:id="fileClaim" mnemonicParsing="false" onAction="#switchToFileClaimMenu" prefHeight="26.0"
                    prefWidth="101.0" text="File claim">
                <VBox.margin>
                    <Insets bottom="10.0"/>
                </VBox.margin>
            </Button>
            <Button fx:id="updateClaim" mnemonicParsing="false" prefHeight="26.0" prefWidth="101.0"
                    text="Update claim">
                <VBox.margin>
                    <Insets bottom="10.0"/>
                </VBox.margin>
            </Button>
            <Button fx:id="retrieveClaim" mnemonicParsing="false" onAction="#switchToClaimInformationMenu"
                    prefHeight="26.0" prefWidth="101.0" text="Retrieve claim">
                <VBox.margin>
                    <Insets bottom="10.0"/>
                </VBox.margin>
            </Button>
            <Button fx:id="deleteClaim" mnemonicParsing="false" prefHeight="26.0" prefWidth="101.0"
                    text="Delete claim" onAction="#switchToDeleteClaimMenu"/>
        </VBox>
        <VBox fx:id="beneficiaryFunctions" layoutX="349.0" layoutY="81.0" prefHeight="136.0" prefWidth="123.0">
            <Button fx:id="addBeneficiary" mnemonicParsing="false" onAction="#switchToAddBeneficiaryScreen1"
                    text="Add beneficiary">
                <VBox.margin>
                    <Insets bottom="20.0"/>
                </VBox.margin>
            </Button>
            <Button fx:id="updateBeneficiary" mnemonicParsing="false" text="Update beneficiary"
                    onAction="#switchToUpdateBeneficiaryMenu">
                <VBox.margin>
                    <Insets bottom="20.0"/>
                </VBox.margin>
            </Button>
            <Button fx:id="removeBeneficiary" mnemonicParsing="false" text="Remove Beneficiary"
                    onAction="#switchToDeleteBeneficiaryMenu">
                <VBox.margin>
                    <Insets bottom="10.0"/>
                </VBox.margin>
            </Button>
            <Button fx:id="retrieveBeneficiaryButton" mnemonicParsing="false"
                    onAction="#switchToViewBeneficiaryInfo" text="Retrieve Beneficiary"/>
        </VBox>
        <Button fx:id="calculateYearlyFees" layoutX="238.0" layoutY="243.0" mnemonicParsing="false"
                text="Calculate yearly fees" onAction="#switchToYearlyInsuranceFeeMenu"/>
        <Button fx:id="exit" layoutX="282.0" layoutY="291.0" mnemonicParsing="false" onAction="#switchToLoginScreen"
                text="Exit"/>
    </Pane>
</TitledPane>
